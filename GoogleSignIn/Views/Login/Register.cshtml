@model GoogleSignIn.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Register", "Login"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <h3>Register</h3>
    <hr />
    <div class="form-group">
        <div>Email</div>
        @Html.EditorFor(m => m.User.Email, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
    </div>
    <div class="form-group">
        @Html.DisplayNameFor(m => m.User.Id)
        @Html.EditorFor(m => m.User.Id, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
    </div>
    <div class="form-group">
        @Html.DisplayNameFor(m => m.User.Name)
        @Html.EditorFor(m => m.User.Name, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.DisplayNameFor(m => m.Roles)
        @Html.DropDownListFor(m => m.User.RoleId, new SelectList(Model.Roles, "Id", "Name"), "-- Select --", htmlAttributes: new { @class = "form-control" })
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
}
